    <link rel="apple-touch-icon" href="<%= image_path('roy_icon.png')%>">

    <meta name="description" content="<%= data.site.title %> <%= data.site.description %>" />
    <meta property="og:description" content="<%= data.site.title %> <%= data.site.description %>" />

    <meta property="og:image" content="<%= image_path('roy_icon.png')%>" />
    <meta itemprop="image" content="<%= image_path('roy_icon.png')%>">

